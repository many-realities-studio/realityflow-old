generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./../src/database/prod.db"
}

model behaviour {
  id              Int    @id @default(autoincrement()) @map("_id")
  Id              String
  TypeOfTrigger   String
  TriggerObjectId String
  TargetObjectId  String
  ProjectId       String
  NextBehaviour   String
  Action          String
}

model db_object {
  id        Int      @id @default(autoincrement()) @map("_id")
  Id        String   @unique
  Name      String
  X         Float
  Y         Float
  Z         Float
  Q_x       Float
  Q_y       Float
  Q_z       Float
  Q_w       Float
  S_x       Float
  S_y       Float
  S_z       Float
  R         Float
  G         Float
  B         Float
  A         Float
  Prefab    String
  projectId String?
  project   project? @relation(fields: [projectId], references: [Id])
}

model project {
  Id            String      @id
  Description   String
  DateModified  Int
  ProjectName   String
  ownerUsername String?
  user          user?       @relation(fields: [ownerUsername], references: [Username])
  db_object     db_object[]
  vs_graph      vs_graph[]
}

model user {
  Username String    @unique @id 
  Password String
  project  project[]
}

model vs_graph {
  id                Int      @id @default(autoincrement()) @map("_id")
  Id                String
  Name              String
  serializedNodes   String
  edges             String
  groups            String
  stackNodes        String
  pinnedElements    String
  exposedParameters String
  stickyNotes       String
  position          String
  scale             String
  references        String
  projectId         String?
  project           project? @relation(fields: [projectId], references: [Id])
}
